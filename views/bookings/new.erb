<h1>Book now</h1>

<form action="/bookings" method="post">
  <label>

    <label>
      Select a member:
      <select name="member_id">
        <% for member in @members %>
        <option value="<%= member.id %>"><%= member.format_name %></option>
        <% end %>
      </select>
    </label>



  Select a Class:
    <select name="session_id">
      <% for session in @sessions %>
      <option value="<%= session.id %>"><%= session.session_name %></option>
      <% end %>
    </select>
  </label>



  <input class="btn btn--action" type='submit' value="Book">
</form>
