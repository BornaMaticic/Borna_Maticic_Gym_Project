<h2>Edit <%= @instructor.name %></h2>
<form method="POST" action="/instructors/<%= @instructor.id %>">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= @instructor.name %>"/>
    </div>

<br>
    <div class="form-el">
      <input class="btn btn--action" type="submit" value="Edit instructor"/>
    </div>

  </div>
</form>
