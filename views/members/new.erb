<h2>Enrol a new member</h2>
<form method="POST" action="/members">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="first_name">First Name:</label>
      <input type="text" name="first_name" id="first_name"/>
    </div>

    <div class="form-el">
      <label for="last_name">Last Name:</label>
      <input type="text" name="last_name" id="last_name"/>
    </div>

  <br>
      <label>
      Select a Membership:
        <select class="" name="membership_type">
          <option value="Basic">Basic / £18 per month </option>
          <option value="Gold">Gold / £25 per month</option>
          <option value="Platinum">Platinum / £35 per month</option>
        </select>
      </label>

      <div class="form-el">
        <label for="date_joined">Date Joined:</label>
        <input type="date" name="date_joined" id="date_joined"/>
      </div>


    <div class="form-el">
      <input type="submit" value="Enrol a new member"/>
    </div>

  </div>
</form>
