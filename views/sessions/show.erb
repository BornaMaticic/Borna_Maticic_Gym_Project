<style>
input[type=submit] {
  width: 60%;
  background-color: green;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

input[type=submit]:hover {
  background-color: #808080;
}
input[id=dele] {
  width: 60%;
  background-color: #e52756;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

input[id=dele]:hover {
  background-color: #808080;
}

aside {
  border-radius: 5px;
  background-color: white;
  padding: 20px;
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
}
</style>

<h1>Class <%= @session.session_name %></h1>
<aside>
  <h2>Members:</h2>
  <br>
<h2><% @session.member.each do |member| %></h2>
<h2><%= member.format_name %></h2>
<% end %>
<br>
<form action="/sessions/<%= @session.id %>/edit" method="GET">
  <input class="btn btn--action" type="submit" value="Edit">
</form>
<br>
<form action="/sessions/<%= @session.id %>/delete" method="POST">
  <input class="btn btn--action" id="dele" type="submit" value="Delete">
</form>
</aside>
