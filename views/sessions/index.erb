<h1>Classes</h1>
<br>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Class Time</th>
    <th></th>
    <th>Class Availability</th>
    <th></th>
    <th>Class Instructor</th>
  </tr>
  <% for session in @sessions %>
  <tr>
    <td><a href="/sessions/<%= session.id %>"><%= session.session_name %></a></td>
    <td>|</td>
    <td><%= session.session_time %></td>
    <td>| <br></td>
    <td><%= session.remaining_spaces %></td>
    <td>| <br></td>
    <td><%= session.session_instructor %></td>
  </tr>
  <% end %>
</table>
<br>
<br>

<p class="btn--wrapper">
  <a class="btn btn--action" href="/sessions/new">Create new Class</a>
</p>
